
{% extends 'layout.html.twig' %}





{% block contenue %}
<div style="top : 20ex">
    <h1>Products index</h1>

    <table class="table" style="margin : 5ex; margin-top : 10ex;">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Image</th>
            <th>Categorie</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for key,product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.nom }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.prix }}</td>
                <td><img src ="data:image/png;base64,{{ images[key] }}" alt = "product image" style="width: 20ex; height: 20ex"></td>
                <td>{{ product.categorie }}</td>
                <td>
                    <button><a href="{{ path('products_show', {'id': product.id}) }}">detail</a></button>
                    <button><a href="{{ path('products_edit', {'id': product.id}) }}">modifier</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products_new') }}">Creer nouveau produit</a>
</div>

{% endblock %}
