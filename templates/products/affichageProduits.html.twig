{% extends 'layout.html.twig' %}




{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("afficherProduits.css") }}">
{% endblock %}
{% block contenue %}

<br><br>
    <div style="margin-top : 10ex ;">


<div class="upper-part">

    <h1 class = "lg-title shop" >Shop Now!</h1>

    <div class="arrow" style="top : 32%;">
        <span></span>
        <span></span>
        <span></span>

    </div>

</div>
<br>
<br>



<div class="bottom-part">
    <div class = "products">
        <div class = "container">
            <div class = "product-items">
                <!-- single product -->
                {% for key,product in products %}

                    <div class = "product">
                        <div class = "product-content">
                            <div class = "product-img">
                                <img src ="data:image/png;base64,{{ images[key] }}" alt = "product image">
                            </div>
                            <div class = "product-btns">
                                <button type = "button" class = "btn-cart"> ajouter au panier
                                    <span><i class = "fas fa-plus"></i></span>
                                </button>
                                <button type = "button" class = "btn-buy"> </i></span>
                                    <a href="{{ path('products_show', {'id': product.id}) }}" style="text-decoration: none">afficher details</a>
                                </button>
                            </div>
                        </div>

                        <div class = "product-info">
                            <div class = "product-info-top">
                                <h2 class = "sm-title">{{ product.categorie }}</h2>
                                <div class = "rating">
                                    <span><i class = "fas fa-star"></i></span>
                                    <span><i class = "fas fa-star"></i></span>
                                    <span><i class = "fas fa-star"></i></span>
                                    <span><i class = "fas fa-star"></i></span>
                                    <span><i class = "far fa-star"></i></span>
                                </div>
                            </div>
                            <a href = "#" class = "product-name">{{ product.nom }}</a>
                            <p class = "product-price">{{ product.prix }}</p>
                            <p class = "product-price">{{ product.prix - 25* product.prix/100 }}</p>
                        </div>

                        <div class = "off-info">
                            <h2 class = "sm-title">25% off</h2>
                        </div>
                    </div>
                    <!-- end of single product -->
                {% endfor %}

            </div>
        </div>
    </div>

</div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

{% endblock %}

